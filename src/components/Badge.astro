---
import { cn } from "@/lib/utils";
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<span
  class={cn(
    `rounded-full bg-blue-100 pl-1 pr-0  sm:px-2.5 py-0.5 text-xs font-medium flex items-center gap-1 sm:gap-2
    text-blue-800 dark:bg-blue-900 dark:text-blue-300`,
    className
  )}
>
  <slot />
</span>
