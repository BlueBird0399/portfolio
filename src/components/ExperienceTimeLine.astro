---
import { experienceTimeLines } from "@/lib/data/experienceTimeLine";
import Badge from "./Badge.astro";
import TimeLine from "./TimeLine.astro";
import TimeLineItem from "./TimeLineItem.astro";
---

<h3 class="text-center text-xl font-bold sm:text-left">Laboral Experience</h3>
<TimeLine class="max-w-3xl">
  {
    experienceTimeLines.map((timeLine) => (
      <TimeLineItem date={timeLine.date} description={timeLine.description} title={timeLine.title}>
        {timeLine.technologies?.map((technology) => (
          <Badge class={technology.style}>
            <technology.icon />
            {technology.name}
          </Badge>
        ))}
      </TimeLineItem>
    ))
  }
</TimeLine>
